# Configuración de la aplicación
APP_NAME="Sistema de Auditoría de Software - API"
APP_VERSION="1.0.0"
APP_DESCRIPTION="API REST segura para el sistema de auditoría de software - Parte 2"

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Configuración de la base de datos
DATABASE_URL=postgresql://auditoria_user:auditoria_secure_password_2025!@postgres:5432/auditoria_db
DATABASE_ECHO=False

# Configuración de autenticación JWT
SECRET_KEY=your-super-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configuración de CORS
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000", "http://127.0.0.1:3001", "http://localhost:8000", "http://127.0.0.1:8000"]
CORS_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
CORS_HEADERS=["*"]

# Configuración de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuración de logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Configuración de seguridad
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Configuración de validaciones
MIN_PASSWORD_LENGTH=8
MAX_NAME_LENGTH=100
MAX_EMAIL_LENGTH=254

# Configuración específica para datos sensibles
RUT_MASK_LENGTH=4
RELIGION_HASH_ALGORITHM=ARGON2
HASH_SALT_LENGTH=32

# Configuración de encriptación de RUT (reversible con salt + pepper)
RUT_ENCRYPTION_KEY=your-super-secret-key-here-change-in-production
RUT_ENCRYPTION_SALT=sistema_auditoria_salt
RUT_ENCRYPTION_ITERATIONS=100000

# Configuración específica para Argon2 (cuando RELIGION_HASH_ALGORITHM=ARGON2)
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=1

# Configuración de encriptación y hash
ENCRYPTION_ALGORITHM=AES256
HASH_ALGORITHM=SHA256

# Configuración de auditoría
AUDIT_LOG_RETENTION_DAYS=365
AUDIT_LOG_MAX_SIZE=1000000
AUDIT_ENABLED=True

# Configuración de sesiones
SESSION_TIMEOUT=1800
SESSION_CLEANUP_INTERVAL=3600

# Configuración de archivos
MAX_FILE_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=["pdf", "jpg", "jpeg", "png", "doc", "docx"]

# Configuración de email (para notificaciones)
EMAIL_ENABLED=False
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM_ADDRESS=noreply@auditoria.com

# Configuración de respaldo
BACKUP_ENABLED=True
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/backups/auditoria

# Configuración de monitoreo
MONITORING_ENABLED=True
HEALTH_CHECK_INTERVAL=60
PERFORMANCE_MONITORING=True

# Configuración de desarrollo
DEBUG=False
TESTING=False
DEVELOPMENT=True

# Configuración de timezone
TIMEZONE=America/Santiago

# Configuración de paginación
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# Configuración de cache
CACHE_ENABLED=True
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Configuración de API
API_PREFIX=/api
API_VERSION=v1
API_TITLE="Sistema de Auditoría API"
API_DESCRIPTION="API REST segura para el sistema de auditoría de software"

# Configuración de documentación
DOCS_ENABLED=True
DOCS_URL=/api/docs
REDOC_URL=/api/redoc
OPENAPI_URL=/api/openapi.json
